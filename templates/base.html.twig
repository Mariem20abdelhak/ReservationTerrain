<!DOCTYPE html>
<html  lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title> {% block title %}{% endblock %} </title>
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        <!-- Place favicon.ico in the root directory -->
        <link rel="shortcut icon" href="https://manage.wix.com/_serverless/brand-maker/api/v1/design/5c1a8f0c-1646-42c7-ad6f-a926e73f0480/preview-redirect"> 
        <!--Fonts-->
        <link href="https://fonts.googleapis.com/css?family=Cabin|sans-serif" rel="stylesheet">
        <!--Fonts--> 
        <!--FontAwesome-->
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous">
        <!--FontAwesome-->
        <link href="{{asset ('css/nav.css')}}" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body class="stop-scroll">
    {% block dots %}{% endblock %}
        <header>
            <nav >
                <div class="logo">
                    <a href="{{ path('app_home') }}"><img src="{{ asset('images/logo.jpeg')}}" height="50px" width="300px" alt="Site Logo"></a>
                </div>
                <div class="toggle ">
                    <span class="first"></span>
                    <span class="middle"></span>
                    <span class="last"></span>
                </div>
                <div class="navigation-bar">
                    <ul>
                        <li><a href="{{ path('app_home') }}">Home<span class="underline"></span></a></li>
                        <li><a href="#about-us">About<span class="underline"></span></a></li>
                        <li><a href="{{path('app_contact')}}">Contact<span class="underline"></span></a></li>
                        <li><a href="#">Services<span class="underline"></span></a></li>
                        {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                            <li><a href="{{ path('user_home') }}">Profile<span class="underline"></span></a></li>
                            <li><a href="{{ path('app_logout') }}">Logout<span class="underline"></span></a></li>
                        {% else %}
                            <li><a href="{{ path('app_login') }}">Login<span class="underline"></span></a></li>
                            <li><a href="{{ path('app_register') }}">Register<span class="underline"></span></a></li>
                        {% endif %}
                    </ul>
                </div>
            </nav>
            {% block header %}{% endblock %}
        </header>
            {% block main %}{% endblock %}
    </body>
</html>

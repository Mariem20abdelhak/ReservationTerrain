<!DOCTYPE html>
<html  lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Log in !</title>
        <link href="{{asset ('css/login1.css')}}" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Karla:400,700&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="https://cdn.materialdesignicons.com/4.8.95/css/materialdesignicons.min.css">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://www.bootstrapdash.com/demo/login-template-free-2/assets/css/login.css">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body >
        <div class="container-fluid">
            <div class="row">
            <div class="col-sm-6 login-section-wrapper">
                <div class="brand-wrapper">
                    <a href="{{ path('app_home') }}"><img src="{{ asset('uploads/logo.png')}}" height="50px" width="300px" alt="Site Logo"></a>
                </div>
                <div class="login-wrapper my-auto">
                <h1 class="login-title">Log in</h1>
                <form method="Post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            <div class="alert alert-danger">
                                You are logged in as {{ app.user.userIdentifier }}  <a style="color:green; text-decoration:none;" href="{{ path('app_logout') }}">Logout</a>
                            </div>
                        </div>
                    {% endif %}



                    <div class="form-group">
                        <div class="form-group mb-4">
                            <label for="name">User Email</label>
                            <input type="email" name="email" id="name" class="form-control" placeholder="user email"  value="{{last_username}}" required autofocus>
                        </div>
                        <div class="form-group mb-4">
                            <label for="pass">Password</label>
                            <input type="password" name="password" id="pass" class="form-control" autocomplete="current-password" required placeholder="enter your passsword"><br>
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <button type="submit" id="login" class="btn btn-block login-btn">Login</button>
                    </div>
                </form>
                <a href="{{ path('app_forgot_password_request') }}" class="forgot-password-link">Forgot password?</a>
                <p class="login-wrapper-footer-text">Don't have an account? <a href="{{ path('app_register') }}" class="text-reset">Register here</a></p>
                </div>
            </div>
            <div class="col-sm-6 px-0 d-none d-sm-block">
                <img src="https://images.pexels.com/photos/7078721/pexels-photo-7078721.jpeg?auto=compress&cs=tinysrgb&w=600" class="login-img">
            </div>
            </div>
        </div>
    </body>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
</html>

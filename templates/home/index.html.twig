{% extends 'base.html.twig' %}
    {% block stylesheets %}
        <link href="{{asset ('css/main.css')}}" rel="stylesheet">
        <link href="{{asset ('css/search.css')}}" rel="stylesheet">
        <link href="{{asset ('css/header.css')}}" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css"/>
    {% endblock %}
    {% block title %}SportsArena{% endblock %}
{% block body %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success" role="alert">{{ message }}</div>
    {% endfor %}
<!--[if lte IE 9]>
<p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="https://browsehappy.com/">upgrade your browser</a> to improve your experience and security.</p>
<![endif]-->



<!--Start Dots-->
{% block dots %}
    <div class="dots">
        <div class="active one" data-x="header"></div>
        <div class="two" data-x=".terrains"></div>
        <div class="three" data-x=".fixed-image"></div>
    </div>
{% endblock %}
<!--End Dots-->


<!--Start Header-->
{% block header %}
{% include 'header.html.twig' %}
{% endblock %}
<!--End Header-->

{% block main %}

<!--start terrains-->
<div class="terrains " id ="terrains" style="background-color:#dee2e6;padding-top:20px ; color:white;">
    <div class="text">
        <h2 style="text-transform:uppercase; font-size:50px ; margin-left:40px">Recommanded</h2>
    </div>
    {% if terrains is empty %}
        <p>No Staduim found.</p>
    {% else %}
        <div class="row">
            <div id="carouselExampleControlsNoTouching" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    {% set active = true %}
                    {% for terrain in terrains %}
                    <div class="carousel-item  {% if active %}active{% endif %}">
                        <div class="card" style="width: 18rem; margin-left:120px; margin-top:60px">
                            <img src="{{ asset('/uploads/images/' ~ terrain.images[0]) }}" class="card-img-top" alt="{{ terrain.name }}" height="300px" width="200px">
                            <div class="card-body">
                                <h5 class="card-title">{{ terrain.name }}</h5>
                                <p class="card-text">{{ terrain.description }}</p>
                            </div>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">{{ terrain.price }} DT</li>
                            </ul>
                            <div class="card-body">
                                <a href="{{ path('app_terrain_show', {'id': terrain.id}) }}" class="btn btn-warning">View Details</a>
                            </div>
                        </div>
                        </div>
                    
                    {% set active = false %}
                    {% endfor %}
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControlsNoTouching" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon"  aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControlsNoTouching" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
            
    {% endif %}
    </div>
</div>
<!--End terrains-->

<!--start About Us-->
<div class="about-us" id ="about-us">
    <div class="text">
        <h2>Discover</h2>
        <h3>About Us</h3>
        <p>We are a team of sports enthusiasts who are passionate about bringing people together to enjoy their favorite games and events. Our website is dedicated to providing a convenient and reliable way for you to reserve your spot in the stadium for any upcoming events.</p>
        <div><a class="a-CTA" href="#about-us2">About Us</a></div>
    </div>
    <div class="image-container">
        <div class="image image1">
            <img src="https://images.pexels.com/photos/279004/pexels-photo-279004.jpeg" alt="staduim Photo" height="400px" >
        </div>
        <div class="image image2">
            <img src="https://images.pexels.com/photos/159819/american-football-football-football-player-quarterback-159819.jpeg" alt="staduim Photo" height="400px" >
        </div>
    </div>
</div>
<!--End About Us-->



<!--Start fixed-image-->
<div class="fixed-image">
    <div class="text">
        <h2>The Perfect</h2>
        <h3>Blend</h3>
    </div>
</div>
<!--End fixed-image-->

<!--start About Us-->
<div class="reservation">
    <div class="text">
        <h2>Culinary</h2>

{% extends 'base.html.twig' %}
    {% block stylesheets %}
        <link href="{{asset ('css/search.css')}}" rel="stylesheet">
        <link href="{{asset ('css/main.css')}}" rel="stylesheet">
    {% endblock %}
    {% block title %}SportsArena{% endblock %}
{% block body %}

{% block main %}
    <!--start terrains-->
        <div class="text">
            <h2 style="text-transform:uppercase; font-size:50px">Search</h2>
        </div>
    <div class="terrains " id ="terrains" >
        {% if results is empty %}
            <p style="margin-top:100px;">No Staduim found.</p>
        {% else %}
            <div class="row">
                {% for terrain in results %}
                    <div class="card" style="width: 18rem; margin:50px; margin-top:60px">
                        <img src="{{ asset('/uploads/images/' ~ terrain.images[0]) }}" class="card-img-top" alt="{{ terrain.name }}" height="300px" width="200px">
                        <div class="card-body">
                            <p class="card-title">{{ terrain.name }}</p>
                            <p class="card-text">{{ terrain.description }}</p>
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">{{ terrain.price }} DT</li>
                        </ul>
                        <div class="card-body">
                            <a href="{{ path('app_reservation_create', {'id': terrain.id}) }}" class="btn btn-success">Book Now</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock %}
{% endblock %}

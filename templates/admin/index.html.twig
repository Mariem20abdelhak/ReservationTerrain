{% extends 'admin.html.twig' %}
{% block title %}Admin Profile{% endblock %}
{% block main %}
	<div class="main">
		<div class="container">
			<div class="profile">
				<img src="avatar.jpg" alt="Avatar">
				<h1>{{ app.user.firstName}} {{app.user.lastName}}</h1>
				<p>Email: {{ app.user.username }} </p>
				<p>Address: 123 Main St, Anytown USA</p>
				<a href="{{ path('admin_profile_edit') }}" class="button">Edit Profile</a>
				<a href="{{ path('app_forgot_password_request') }}" class="button">Edit Password</a>
			</div>
		</div>
	</div>
{% endblock %}


{% extends 'admin.html.twig' %}

{% block title %}Category{% endblock %}

{% block main %}
<div class="main">
    <h1>Category</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Descreption</th>
                <td>{{ category.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_category_index') }}" class="btn btn-success">back to list</a>

    <a href="{{ path('app_admin_category_edit', {'id': category.id}) }}" class="btn btn-warning">edit</a>

    {{ include('admin/admin_category/_delete_form.html.twig') }}
</div>
{% endblock %}

{% extends 'owner.html.twig' %}

{% block title %}Terrain index{% endblock %}

{% block main %}
<div class="main">
    <h1>Terrain index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Surface</th>
                <th>Adresse</th>
                <th>Materiel</th>
                <th>Description</th>
                <th>Hours</th>
                <th>Pause</th>
                <th>Price</th>
                <th>Discount</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
    {% for terrain in terrains %}
        <tbody>
            <tr>
                <td>{{ terrain.id }}</td>
                <td>{{ terrain.name }}</td>
                <td>{{ terrain.surface }}m</td>
                <td>{{ terrain.adresse }}</td>
                <td>{{ terrain.materiel }}</td>
                <td>{{ terrain.description }}</td>
                <td>{{ terrain.hours|date('H:i') }}</td>
                <td>{{ terrain.pause|date('H:i') }}</td>
                <td>{{ terrain.price }}DT</td>
                <td>{{ terrain.discount }}DT</td>
                <td>
                    {% for image in terrain.images %}
                            <img src="{{ asset('/uploads/images/' ~ image.name) }}" alt="Image" width="150">
                    {% endfor %}
                </td>
                <td>
                    <a href="{{ path('app_owner_terrain_edit', {'id': terrain.id}) }}" class="btn btn-warning">edit</a>
                    {{ include('owner/owner_terrain/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_owner_terrain_new') }}" class="btn btn-success">Create new</a>
</div>
{% endblock %}

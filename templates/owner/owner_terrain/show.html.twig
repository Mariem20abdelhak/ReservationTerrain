{% extends 'owner.html.twig' %}

{% block title %}Terrain{% endblock %}

{% block main %}
<div class="main">
    <h1>Terrain</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ terrain.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ terrain.name }}</td>
            </tr>
            <tr>
                <th>Surface</th>
                <td>{{ terrain.surface }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ terrain.adresse }}</td>
            </tr>
            <tr>
                <th>Is_reserved</th>
                <td>{{ terrain.isReserved ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Materiel</th>
                <td>{{ terrain.materiel }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ terrain.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ terrain.price }}</td>
            </tr>
            <tr>
                <th>Discount</th>
                <td>{{ terrain.discount }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ terrain.createdAt ? terrain.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>ModifiedAt</th>
                <td>{{ terrain.modifiedAt ? terrain.modifiedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td> 
                {% for image in terrain.images %}
                    <img src="{{ asset('/uploads/images/' ~ image.name) }}" alt="Image" width="150">
                {% endfor %}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_owner_terrain_index') }}">back to list</a>

    <a href="{{ path('app_owner_terrain_edit', {'id': terrain.id}) }}">edit</a>

    {{ include('owner/owner_terrain/_delete_form.html.twig') }}
</div>
{% endblock %}

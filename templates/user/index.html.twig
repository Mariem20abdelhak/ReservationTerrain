{% extends 'user.html.twig' %}

{% block title %}User Profile{% endblock %}
{% block main %}
	<div class="main">
		<div class="container">
			<div class="profile">
				<img src="avatar.jpg" alt="Avatar">
				<h1>{{ app.user.firstName}} {{app.user.lastName}}</h1>
				<p>Email: {{ app.user.username }} </p>
				<p>Address: 123 Main St, Anytown USA</p>
				<a href="#" class="button">Edit Profile</a>
				<a href="#" class="button">Edit Password</a>
			</div>
		</div>
	</div>
{% endblock %}
